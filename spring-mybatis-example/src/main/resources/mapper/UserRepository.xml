<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE 
	mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.UserRepository">
	<insert 
		id="createUser"
		parameterType="com.example.demo.domain.User">
		INSERT 
			INTO users(id, email, password, joinedDate)
		  VALUES (#{id}, #{email}, #{password}, #{joinedDate})			
	</insert>
	
	<select
		id="findById"
		resultType="com.example.demo.domain.User">
		SELECT * FROM users WHERE id = #{id}	
	</select>
	<select 
		id="findAll"
		resultType="com.example.demo.domain.User">
		SELECT * FROM users	
	</select>
	<update
		id="updateUser" 
		parameterType="com.example.demo.domain.User">
		UPDATE users
		   SET email = #{email}, password = #{password}
		 WHERE id = #{id}
	</update>
	<delete id="deleteUser">
		DELETE FROM users WHERE id = #{id}
	</delete>

</mapper>
